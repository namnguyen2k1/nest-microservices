{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/nest-monorepo/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/nest-monorepo/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/nest-monorepo",
  "projects": {
    "assistant-service": {
      "type": "application",
      "root": "apps/assistant-service",
      "entryFile": "main",
      "sourceRoot": "apps/assistant-service/src",
